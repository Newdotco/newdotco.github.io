/*------ FIRST PAGE ------*/

/* Mobile */

#welcome header img 
	width 15%
	padding-top 50px

.welcome-content
	display flex
	justify-content center
	flex-flow column nowrap
	align-self center
	
	.group 
		height 100%
		width 100%
		display flex
		justify-content center
		flex-flow column wrap
		align-self center
		align-items center
			
		.welcome-text
			display flex
			justify-content space-between
			flex-flow column wrap
			align-self center
			text-align center
			margin-top -170px
				
			.top-title 
				max-width 240px
				color #333
				padding 0 50px
				margin 0
				text-align center
				font-size 40px
				line-height 1.2
				font-family Arial
				letter-spacing 0
				font-weight 700
				font-style normal
			
			.top-subtitle 
				max-width 240px
				margin 8px auto 0
				padding 0 50px
				line-height 1.2
				text-align center			
				letter-spacing 0
				font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
				color #333
				font-size 18px
				font-style normal

		.text-input 
			width 300px
			height 40px
			padding 6px 10px 6px 13px
			margin 0
			border 3px solid #fffc00
			font 16px/1.4 Helvetica, Arial, sans-serif	
			box-sizing border-box
			color #222
			margin-top 40px
			border-radius 5px
			outline 0
			box-shadow none
			text-rendering auto
			letter-spacing normal
			word-spacing normal
			text-transform none
			text-indent 0px
			text-shadow none
			text-align start
				
		.signin-button
			text-decoration none
			height 40px
			width 300px
			border 3px solid #fffc00
			box-sizing border-box
			font-size 16px
			font-weight bold
			font-family Helvetica, Arial, sans-serif
			cursor pointer
			margin-top 8px
			border-radius 5px
			color #333
			background-color #fff
			
		.mobile-advice
			width 100%
			position absolute
			bottom 0
			left 0
			background-color #15a3ed
			vertical-align baseline		
			
			&-text
				padding 10px 50px
				text-align center
				letter-spacing 0
				font-family Helvetica,Arial,sans-serif;
				color #fff
				font-size 18px
				font-style normal

/* Tablet */

@media (min-width 768px)
	.welcome-content
		.group
			.welcome-text
				margin-top -120px
			
				.top-title
					padding 0 100px
					max-width 600px
					font-size 50px
			
				.top-subtitle
					padding 0 100px
					max-width 600px
					font-size 24px
					
			.text-input, .signin-button
				height 45
					
			.mobile-advice
				&-text
					padding 10px 100px
					font-size 20px

/* Desktop */

@media (min-width 1024px)

	#welcome header img
		width 5%
		
	.welcome-content
		.group
			.welcome-text
				margin-top -500px 
				justify-content center
										
				.top-logo
					width 60px
					cursor pointer
					order 1
					align-self center
					
				.top-subtitle
					order 2
					color #fff
					padding-top 50px
					max-width 600px
					font-size 25px
					font-weight 700
					
			.field, .signin-button, .mobile-advice
				display none

	.about-newdot
		color #fff
		text-decoration none
		cursor pointer
		z-index 2
		font-family Lato, "Helvetica Neue", sans-serif
		font-size 18px
		position absolute
		bottom 15px
		left 50%
		transform translateX(-50%)
		
	.about-newdot:hover 
		color #FFFC00