/*------ FIRST PAGE ------*/
		
.welcome-content
	display flex
	justify-content center
	flex-flow nowrap
	align-self center	
	
	.welcome-text
		display flex
		justify-content space-between
		flex-flow column wrap
		align-self center
		text-align center
		margin-top -250px
		
		.top-title 
			color #e62739
			padding 0 50px
			margin 0
			text-align center
			font-size 63px
			line-height 1.2
			font-family Arial
			letter-spacing 0
			font-weight 700
			font-style normal
		
		.top-subtitle 
			max-width 580px
			margin 15px auto 0
			padding 0 50px
			line-height 1.2
			text-align center			
			letter-spacing 0
			font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
			color #fff
			font-size 24px
			font-weight 420
			font-style normal			
	
.about-newdot
	color #fff
	text-decoration none
	cursor pointer
	z-index 2
	font-family Lato, "Helvetica Neue", sans-serif
	font-size 16px
	position absolute
	bottom 15px
	left 50%
	transform translateX(-50%)
	
.about-newdot:hover 
	color #e62739
	


/*------ SECOND PAGE ------*/

.info-content
	display flex
	justify-content space-between
	flex-flow nowrap
	align-self center

	.container
		height 410px
		width 100%
		display flex
		justify-content space-between
		flex-flow nowrap
		align-self center
		
		.info-logo
			order 1
			align-self center
			padding-left 200px

		.info-text
			order 2
			align-self center
			width 520px
			text-align left
			background 0
			padding-right 80px
			
			h1
				font-family Lato, "Helvetica Neue", sans-serif
				line-height 1
				color #fff
				font-size 38px
				font-weight 700
				text-shadow none
				
			p
				font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif 
				font-size 18px
				color #fff
				font-style normal
				letter-spacing 0
				line-height 1.2
				



/*------ THIRD PAGE ------*/

.form-content
	display flex
	justify-content space-between
	flex-flow nowrap
	align-self center
	
	.group 
		height 100%
		width 100%
		display flex
		justify-content center
		flex-flow column wrap
		align-self center
		align-items center	

		.signin-title
			margin-bottom 30px
			
			.main-title
				line-height 1.2
				text-align center			
				letter-spacing 0
				font-family Lato, "Helvetica Neue", sans-serif
				color #fff
				font-size 32px
				font-style normal
				font-weight 700
				text-shadow none
				
			#congrats
				font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif 
				font-size 18px
				color #fff
				margin 10px auto 0
				font-style normal
				letter-spacing 0
				line-height 1.2
				text-align center
				font-weight bold
				
							
		.text-input 
			width 300px
			height 45px
			padding 6px 10px 6px 13px
			margin 0
			border 0
			font 16px/1.4 Helvetica, Arial, sans-serif	
			box-sizing border-box
			color #222
			border-radius 5px
			outline 0
			text-rendering auto
			letter-spacing normal
			word-spacing normal
			text-transform none
			text-indent 0px
			text-shadow none
			text-align start
			
		.signin-button
			height 45px
			width 300px
			border 1px solid #e62739
			box-sizing border-box
			font-size 16px
			font-weight bold
			font-family Helvetica, Arial, sans-serif
			cursor pointer
			margin-top 8px
			border-radius 5px
			color #fff
			background-color #e62739
			


/*------ PAGINATION ------*/

.pagination
	left 40px
	position fixed
	top 50%
	z-index 2240606
	transform: translateY(-50%);
	
	.dot
		display flex
		justify-content center
		flex-flow nowrap
		align-self center
		align-items center
		border-radius 50%
		box-shadow inset 0 0 0 3px #BDBDBD
		cursor pointer
		height 16px
		margin-bottom 10px
		position relative
		width 16px
		box-sizing border-box
	
.dot:hover
	box-shadow inset 0 0 0 3px #fff

.dot:active
	box-shadow none
.active
	background-color #fff
	


