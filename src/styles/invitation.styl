/*------ INVITATION PAGE ------*/

/*----- Mobile ------*/
	
.container
	height 100%
	width 100%
	display flex
	justify-content center
	flex-flow column wrap
	align-self center
	align-items center
	
	.signin-title
		max-width 280px
		margin-bottom 100px
		
		.main-title
			top 0
			line-height 1.2
			text-align center
			letter-spacing 0
			font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif 
			color #333
			font-size 25px
			font-style normal
			font-weight 700
			text-shadow none
							
		#invitation-text
			font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif 
			font-size 15px
			color #333			
			margin 20px auto 0
			font-style normal
			letter-spacing 0
			line-height 1.3
			text-align center
			font-weight bold
			
	.logo-register
		cursor pointer
		align-self center

/*----- Desktop -----*/

@media (min-width 1024px)
	.container
		.signin-title
			margin-top 140px
			max-width 900px
			margin-bottom 180px
			
			.main-title
				font-size 40px
				
			#invitation-text
				padding 0 100px
				margin 20px auto 0
				font-size 20px