/*----- Desktop -----*/

@media (min-width 1024px)

	/*.form-invitation
		display flex
		justify-content space-between
		flex-flow nowrap
		align-self center*/
		
	.container
		height 100%
		width 100%
		display flex
		justify-content start
		flex-flow column wrap
		align-self center
		align-items center
			
		.signin-title
			margin-top 140px
			max-width 900px
			margin-bottom 180px
				
			.main-title
				top 0
				line-height 1.2
				text-align center
				letter-spacing 0
				font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif 
				color #333
				font-size 40px
				font-style normal
				font-weight 700
				text-shadow none
							
			#invitation-text
				font-family Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif 
				font-size 20px
				color #333
				padding 0 100px
				margin 50px auto 0
				font-style normal
				letter-spacing 0
				line-height 1.3
				text-align center
				font-weight bold
			
		.logo-register
			cursor pointer
			align-self center
				
				