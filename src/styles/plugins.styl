/*------ PAGINATION ------*/

@media (min-width 1024px)
	.pagination
		left 40px
		position fixed
		top 50%
		z-index 2240606
		transform translateY(-50%)
		
		.dot
			display flex
			justify-content center
			flex-flow nowrap
			align-self center
			align-items center
			border-radius 50%
			box-shadow inset 0 0 0 3px #BDBDBD
			cursor pointer
			height 16px
			margin-bottom 10px
			position relative
			width 16px
			box-sizing border-box
		
			&:hover
				box-shadow inset 0 0 0 3px #fff
		
	.select
		background-color #fff
		border 9px solid white
	


